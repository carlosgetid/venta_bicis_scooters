<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    <link href="~/Content/cccliente/estiloImagenes.css" rel="stylesheet" />

    @Styles.Render("~/Content/css")
    
</head>


<body>
    
    <div class="row-cols-sm-2">
        <div class="col-md-12">
            <nav class=" main-header navbar navbar-expand-lg navbar-white navbar-light">
                <a href="~/Cliente/PrincipalCliente">
                    <img src="~/Content/images/1.jpg" alt="" style="width:10%;height:10%" />
                </a>
                
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>



                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav">
                        @*LOGIN*@
                        <li class="nav-item ">
                            <a class="nav-link" href="~/Cliente/Login">
                                <i class="far fa-user-circle" style="font-size:50px;color:black;"></i>
                                <span class="sr-only">(current)</span>
                            </a>
                        </li>

                        @*CARRO DE COMPRAS*@
                        <li class="nav-item ">
                            <a class="nav-link" href="#">
                                <i class="fas fa-cart-plus" style="font-size:50px;color:black;"></i>
                                <span class="sr-only">(current)</span>
                            </a>
                        </li>



                    </ul>
                </div>

            </nav>
        </div>
    </div>








    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Mi aplicación ASP.NET</p>
        </footer>
    </div>






    <!--JS PARA LOS CARUSELES -->
    <!-- JS, Popper.js, and jQuery -->
    @Scripts.Render("~/bundles/jquery")
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
    @Scripts.Render("~/bundles/bootstrap")

    <!-- script de font awesome -->
    <script src="https://kit.fontawesome.com/2c36e9b7b1.js" crossorigin="anonymous"></script>
    @Scripts.Render("~/bundles/carruseles")


    @RenderSection("scripts", required: false)


</body>
</html>
