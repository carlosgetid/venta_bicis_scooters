@model IEnumerable<Venta_Bicis_Scooters.ENTITY.Scooter>

@{
    ViewBag.Title = "ListarScooter";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Listado de Scooter</h2>

<p>
      @Html.ActionLink("Nuevo Scooter", "CreateScooter",null,new {@class= "btn btn-outline-success" })
</p>

<div class="table-wrapper-scroll-y my-custom-scrollbar">
    <table class="table  table-bordered table-striped mb-0 ">
        <tr>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Marca)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Aro)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Color)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Velocidad)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Motor)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Freno)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Material)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Stock)
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.ID)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Marca)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Aro)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Color)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Velocidad)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Motor)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Freno)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Material)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Precio)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Stock)
                </td>

                <td class="text-center">
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { @class = "btn btn-outline-success" }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ID }, new { @class = "btn btn-outline-primary" }) |
     

                </td>
            </tr>
        }

    </table>
</div>


<style>

    .my-custom-scrollbar {
        position: relative;
        height: 600px;
        overflow: auto;
    }

    .table-wrapper-scroll-y {
        display: block;
    }
</style>