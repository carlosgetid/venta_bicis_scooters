@model IEnumerable<Venta_Bicis_Scooters.Models.TB_IMAGENES>

@{
    ViewBag.Title = "ListarImagenes";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Galeria de Imagenes </h2>

<p>
    @Html.ActionLink("Crear Imagen", "CreateImagen", null, new { @class = "btn btn-outline-success" })
</p>


<div class="table-wrapper-scroll-y my-custom-scrollbar">
    <table class="table table-bordered  table-striped mb-0">
        <tr>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.cod_imagen)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.descrp_imagen)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.cod_imagen)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.descrp_imagen)
                </td>

                <td class="text-center">
                    @Html.ActionLink("Edit", "EditImagen", new { id = item.cod_imagen }, new { @class = "btn btn-outline-success" }) |
                    @Html.ActionLink("Details", "DetailsImagen", new { id = item.cod_imagen }, new { @class = "btn btn-outline-primary" }) |
                    @Html.ActionLink("Delete", "DeleteImagen", new { id = item.cod_imagen }, new { @class = "btn btn-outline-danger" })
                </td>

            </tr>
        }

    </table>
</div>



<style>

    .my-custom-scrollbar {
        position: relative;
        height: 600px;
        overflow: auto;
    }

    .table-wrapper-scroll-y {
        display: block;
    }
</style>